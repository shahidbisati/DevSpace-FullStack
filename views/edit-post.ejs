<%- include('includes/header') %>

    <!--body of the page-->
    <div class="container py-md-5 container--narrow">
        <%- include('includes/flash') %>

        <a class="small font-weight-bold" href="/post/<%= post._id %>">&laquo; Back to post permalink</a>
        <form class="mt-3" action="/post/<%= post._id %>/edit" method="POST">
            <div class="form-group">
                <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
                <input required type="text" value="<%= post.title %>" name="title" id="post-title" class="form-control form-control-lg form-control-title" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="post-body" class="text-muted mb-1"><small>Developer Content</small></label>
                <textarea required type="text" name="body" id="post-body" class="form-control tall-textarea body-content" autocomplete="off"><%= post.body %></textarea>
            </div>
            <button class="btn btn-info ">Update Post</button>
        </form>
    
    </div>
    <!--footer of the page-->

    <%- include('includes/footer') %>